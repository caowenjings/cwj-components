{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react",
    "esModuleInterop": true,
    "types": ["jest"],
    "sourceMap": true,
    "baseUrl": "./",
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    // "allowSyntheticDefaultImports": true,
    // "paths": {
    //   "@/*": ["src/*"],
    //   "@@/*": ["src/.umi/*"]
    // }
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "typings.d.ts"],
  "exclude": [
    "node_modules",
    "lib",
    "es",
    "dist",
    "typings",
    "**/__test__",
    "test",
    "docs",
    "tests"
  ]
}
